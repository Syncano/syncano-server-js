{
  "name": "syncano-server",
  "version": "0.2.0",
  "description": "A library to intereact with the Syncano API on a server side",
  "main": "lib/index.js",
  "author": "Syncano Inc.",
  "contributors": [],
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:lib": "babel src --out-dir lib",
    "build:docs": "jsdoc -c ./conf.json -t ./node_modules/ink-docstrap/template -R README.md -d ./docs -r ./src -u ./tutorials",
    "clean": "npm-run-all clean:*",
    "clean:lib": "rimraf ./lib",
    "clean:docs": "rimraf ./docs",
    "clean:gh-pages": "rimraf ./node_modules/gh-pages/.cache",
    "prepublish": "npm run build",
    "prebuild": "npm run clean",
    "test": "mocha test/**/*.js --compilers js:babel-register",
    "test:coverage": "nyc npm test && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "watch": "npm-run-all --parallel watch:*",
    "watch:lib": "npm run build:lib -- --watch",
    "watch:lib:test": "mocha --watch test/**/*.js --compilers js:babel-register",
    "release": "npm-run-all release:*",
    "release:git-config": "git config --global user.email $GITHUB_EMAIL && git config --global user.name $GITHUB_NAME",
    "release:npm-token": "echo \"//registry.npmjs.org/:_authToken=${NPM_TOKEN}\nprogress=false\" > ~/.npmrc",
    "release:npm": "npm publish",
    "release:docs": "gh-pages -d docs -m \"Docs v${npm_package_version} [ci skip]\"",
    "release:reset": "git reset --hard $CIRCLE_SHA1",
    "release:version": "mversion patch",
    "release:commit": "git commit -am \"Bump to v${npm_package_version} [ci skip]\" && git push origin master && git push origin master:devel"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Syncano/syncano-server-js.git"
  },
  "dependencies": {
    "bluebird": "^3.2.2",
    "lodash": "^4.6.1",
    "moment": "^2.13.0",
    "promise-map-series": "^0.2.2",
    "promise-spread": "^0.1.0",
    "stampit": "^2.1.1",
    "superagent": "^1.7.2",
    "tiny-promisify": "^0.1.1",
    "validate.js": "^0.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.1",
    "babel-loader": "^6.2.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-lodash": "^3.1.3",
    "babel-plugin-transform-inline-environment-variables": "^6.5.0",
    "babel-plugin-transform-strict-mode": "^6.5.0",
    "babel-preset-env": "^1.1.4",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.5.1",
    "codecov": "^1.0.1",
    "eslint": "^1.10.3",
    "gh-pages": "^0.11.0",
    "ink-docstrap": "^1.1.1",
    "isparta": "^4.0.0",
    "jsdoc": "^3.4.0",
    "json-loader": "^0.5.4",
    "mocha": "^2.4.5",
    "mocha-logger": "^1.0.2",
    "mversion": "^1.10.1",
    "nock": "^8.0.0",
    "npm-run-all": "^2.0.0",
    "nyc": "^10.1.2",
    "rimraf": "^2.5.1",
    "should": "^8.2.2",
    "sinon": "^1.17.3",
    "stripe": "^4.12.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "semicolon": false,
    "space": true,
    "esnext": true,
    "globals": [
      "CONFIG",
      "META",
      "__webpack_require__",
      "_",
      "it",
      "describe",
      "beforeEach",
      "afterEach",
      "before",
      "after"
    ],
    "ignore": [],
    "rules": {
      "no-use-extend-native/no-use-extend-native": 0,
      "max-nested-callbacks": [
        "error",
        5
      ],
      "camelcase": 0,
      "unicorn/filename-case": 0,
      "new-cap": 0,
      "object-curly-spacing": 0,
      "no-warning-comments": [
        0,
        {
          "terms": [
            "todo"
          ]
        }
      ]
    }
  }
}
